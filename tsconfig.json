{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": true, // ts recommended
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "lib",
    "resolveJsonModule": true,
    "plugins": [
      {
        "transform": "ts-auto-mock/transformer",
        "cacheBetweenTests": false
      }
    ]
  },
  "exclude": ["jest.config.ts", "jest.setup.ts", "config.ts"]
}
